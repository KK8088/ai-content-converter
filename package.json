{
  "name": "ai-content-converter",
  "version": "1.0.0",
  "description": "将AI对话内容完美转换为专业的Word和Excel文档",
  "main": "index.html",
  "scripts": {
    "dev": "python -m http.server 8080",
    "serve": "npx serve .",
    "build": "npm run minify && npm run optimize",
    "minify": "npm run minify:css && npm run minify:js",
    "minify:css": "cleancss -o dist/css/styles.min.css css/styles.css css/themes.css",
    "minify:js": "terser js/*.js -o dist/js/app.min.js",
    "optimize": "npm run optimize:images",
    "optimize:images": "imagemin assets/images/* --out-dir=dist/images",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint js/**/*.js",
    "lint:fix": "eslint js/**/*.js --fix",
    "format": "prettier --write \"**/*.{js,css,md}\"",
    "validate": "npm run lint && npm run test",
    "prepare": "husky install",
    "release": "standard-version",
    "deploy": "gh-pages -d .",
    "docs:dev": "docsify serve docs",
    "docs:build": "docsify generate docs"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/your-username/ai-content-converter.git"
  },
  "keywords": [
    "ai",
    "content",
    "converter",
    "markdown",
    "word",
    "excel",
    "docx",
    "xlsx",
    "document",
    "format",
    "conversion",
    "chatgpt",
    "deepseek",
    "open-source"
  ],
  "author": "AI Content Converter Team",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/your-username/ai-content-converter/issues"
  },
  "homepage": "https://your-username.github.io/ai-content-converter",
  "devDependencies": {
    "@babel/core": "^7.22.0",
    "@babel/preset-env": "^7.22.0",
    "clean-css-cli": "^5.6.0",
    "docsify-cli": "^4.4.4",
    "eslint": "^8.42.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-plugin-import": "^2.27.0",
    "gh-pages": "^5.0.0",
    "husky": "^8.0.3",
    "imagemin": "^8.0.1",
    "imagemin-cli": "^7.0.0",
    "jest": "^29.5.0",
    "jest-environment-jsdom": "^29.5.0",
    "lint-staged": "^13.2.0",
    "prettier": "^2.8.8",
    "standard-version": "^9.5.0",
    "terser": "^5.18.0"
  },
  "dependencies": {
    "docx": "^7.8.2",
    "file-saver": "^2.0.5",
    "xlsx": "^0.18.5"
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not dead",
    "not ie 11"
  ],
  "jest": {
    "testEnvironment": "jsdom",
    "collectCoverageFrom": [
      "js/**/*.js",
      "!js/config.js",
      "!**/node_modules/**"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 80,
        "functions": 80,
        "lines": 80,
        "statements": 80
      }
    }
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{css,md}": [
      "prettier --write"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  },
  "files": [
    "index.html",
    "css/",
    "js/",
    "assets/",
    "docs/",
    "LICENSE",
    "README.md"
  ]
}
